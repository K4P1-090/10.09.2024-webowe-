@model List<_10._09._2024_webowe_.Models.Game>
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
    <title>Document</title>
</head>

<body>
    <h1>Zbiór gier</h1>
    <table class="table table-striped">
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSortParm">Tytuł</a></th>
            <th>Gatunek</th>
            <th>Rok</th>
            <th>Cena</th>
        </tr>
        @{
            int lp = 0;
        }

        @foreach (var game in Model)
        {
            lp++;
            <tr>
                <td>@game.Title</td>
                <td>@game.Cathegory</td>
                <td>@game.Year</td>
                <td>@game.Price</td>
            </tr>
        }
    </table>

    <div>
        <a asp-action="AddNewBook">Dodaj nową książkę</a>
    </div>
    <h2>ile gier w danym roku</h2>
    <table class="table table-striped">
        <tr>
            <th>Rok</th>
            <th>Liczba gier</th>
        </tr>
        @foreach (var entry in ViewBag.GamesCountByYear)
        {
            <tr>
                <td>@entry.Key</td>
                <td>@entry.Value</td>
            </tr>
        }
    </table>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</html>
